# Environment variables for SSPO Platform
NODE_ENV=production
PORT=3000

# GitHub Webhook Security
GITHUB_WEBHOOK_SECRET=your-super-secret-webhook-key-here

# Database (if using PostgreSQL/MongoDB instead of in-memory)
# DATABASE_URL=postgresql://user:password@localhost:5432/sspo_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Application Settings
MAX_SUGGESTIONS_PER_USER=10
SUGGESTIONS_PER_PAGE=20
CACHE_TTL=3600

# Security
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=6

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ENABLE_ANALYTICS=true